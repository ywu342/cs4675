<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.yalingwu.internetservices.MainActivity"
    tools:showIn="@layout/activity_main">

    <com.example.yalingwu.internetservices.CustomAutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startLocTxt"
        android:textSize="20dp"
        android:hint="Start location"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textAlignment="center" />

    <com.example.yalingwu.internetservices.CustomAutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/endLocTxt"
        android:textSize="20dp"
        android:hint="End location"
        android:layout_below="@+id/startLocTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/mileRangeTxt"
        android:textSize="20dp"
        android:hint="Remaining mile range"
        android:textAlignment="center"
        android:layout_below="@+id/endLocTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submitBtn"
        android:textSize="15dp"
        android:background="#167d91"
        android:backgroundTint="#388bbf"
        android:clickable="false"
        android:textAlignment="center"
        android:textColor="#f9f6f6"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_below="@+id/mileRangeTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp" />
</RelativeLayout>
